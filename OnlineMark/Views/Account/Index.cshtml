@model OnlineMark.Models.LogOnModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert ">
    <h2 class="modal-header">Вхід</h2>
</div>

@using(@Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "col-lg-4 col-lg-offset-4" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.UserName)
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { @class = "form-control"})
        </div>
        <div class="form-group">
           <!-- @Html.LabelFor(model => model.RememberMe) -->
             @Html.CheckBoxFor(model => model.RememberMe, new Dictionary<string, object>() { { "class" , "form-control"} })
            <label for="RememberMe">Запам'ятати мене?</label>
        </div>
        <button type="submit" class="btn btn-success" >Увійти</button>
    </fieldset>
}